
<div class="col-md-6 text-center">

	<div class="card bg-dark rounded align-items-stretch text-light">
		<div class="card-header"><h3 class="mb-0">ADD POST</h3></div>
		<div class="card-body">

			<%= form_for :post, url: posts_path do |f| %>
			<%= f.text_field :title %>
			<%= f.text_field :author_name %>
			<%= f.text_area :img_url, size: "60x12" %>
			<%= f.submit "Create" %>
			<% end %>


		</div>
	</div>
</div>